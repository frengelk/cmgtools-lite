#!/usr/bin/env bash

if [ -z "${1}" ]; then
    echo Please specify outputfolder as positional argument.
    exit
fi

lumi=35.9
outputdir="${1}"

### Signal
./makeBinsYields_0b_0b.py \
    --mca mca/2016_EXT/mca-Spring16_Signal_0b.txt \
    --signal \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/scan

### Background
./makeBinsYields_0b_0b.py \
    --mca mca/2016_EXT/mca-Summer16_0b.txt \
    --grid \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/grid

#### Background with dilepton nJet correction
./makeBinsYields_0b_0b.py \
    --mca mca/2016_EXT/mca-Summer16_0b_dilep-corr.txt \
    --grid \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/grid-dilep

# Systematic: dilepton constant
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/DLConst/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_DLConst

# Systematic: dilepton slope
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/DLSlope/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_DLSlope

# Systematic: JEC
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/JEC/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_JEC

# Systematic: PDF
./makeBinsYields_0b.py \
    --mca ../systs/PDFUnc-RMS/mca-Summer16_Moriond17.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_PDFUnc-RMS

# Systematic: scale match
./makeBinsYields_0b.py \
    --mca ../systs/ScaleMatchVar/mca-Summer16_Moriond17.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_ScaleMatchVar


# Systematic: W polarization
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/Wpol/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_Wpol

# Systematic: W cross section
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/Wxsec/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_Wxsec

# Systematic: b-tagging heavy flavour
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/btagHF/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_btagHF

# Systematic: b-tagging
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/btagLF/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_btagLF

# Systematic: lepton SF
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/lepSF/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_lepSF

# Systematic: pileup
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/PU/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_PU

# Systematic: TTV cross section
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/TTVxsec/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_TTVxsec

# Systematic: TT cross section
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/TTxsec/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_TTxsec

# Systematic: nISR reweighting
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/nISR/mca-Summer16.txt \
    --grid \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/syst_nISR

# Signal systematic: Gluino ISR
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/signal/ISR/mca-Spring16_Signal.txt \
    --signal \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/signal_ISR

# Signal systematic: JEC
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/signal/JEC/mca-Spring16_Signal.txt  \
    --signal \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/signal_JEC

# Signal systematic: btag heavy flavour
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/signal/btagHF/mca-Spring16_Signal.txt  \
    --signal \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/signal_btagHF

# Signal systematic: btag light flavour
./makeBinsYields_0b.py \
    --mca ../systs/2016_EXT/signal/btagLF/mca-Spring16_Signal.txt  \
    --signal \
    --systs True \
    -v 2 \
    -l "${lumi}" \
    -b \
    --od "${outputdir}"/signal_btagLF






